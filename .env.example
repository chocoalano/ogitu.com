TZ=UTC
PORT=3333
HOST=localhost
LOG_LEVEL=info
APP_KEY=
NODE_ENV=development
SESSION_DRIVER=cookie

# Database
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=root
DB_DATABASE=app

# RajaOngkir API (https://rajaongkir.com)
RAJAONGKIR_API_KEY=your_rajaongkir_api_key
RAJAONGKIR_BASE_URL=https://api.rajaongkir.com/starter
# Use 'starter' or 'basic' or 'pro' depending on your plan

# Midtrans Payment Gateway (https://midtrans.com)
MIDTRANS_SERVER_KEY=your_midtrans_server_key
MIDTRANS_CLIENT_KEY=your_midtrans_client_key
MIDTRANS_IS_PRODUCTION=false
MIDTRANS_SNAP_URL=https://app.sandbox.midtrans.com/snap/v1/transactions
MIDTRANS_API_URL=https://api.sandbox.midtrans.com/v2
MIDTRANS_SNAP_JS_URL=https://app.sandbox.midtrans.com/snap/snap.js
# For production, use:
# MIDTRANS_SNAP_URL=https://app.midtrans.com/snap/v1/transactions
# MIDTRANS_API_URL=https://api.midtrans.com/v2
# MIDTRANS_SNAP_JS_URL=https://app.midtrans.com/snap/snap.js
DRIVE_DISK=spaces
SPACES_KEY=
SPACES_SECRET=
SPACES_REGION=
SPACES_BUCKET=
SPACES_ENDPOINT=https://${SPACES_REGION}.digitaloceanspaces.com

# Redis (for caching)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# SMTP Mail (Mailtrap for development)
# Get your credentials at https://mailtrap.io
SMTP_HOST=
SMTP_PORT=
SMTP_USERNAME=your_mailtrap_username
SMTP_PASSWORD=your_mailtrap_password
MAIL_FROM_ADDRESS=noreply@ogitu.com
MAIL_FROM_NAME="OGITU Vape"
LIMITER_STORE=database